{
  "private": true,
  "workspaces": ["packages/*"],
  "scripts": {
    "precommit": "lint-staged",
    "format":
      "prettier --config .prettierrc.js --write './*.{js,json,md}' './packages/*.{js,json,md}' './packages/*/!(node-modules)/**/*.{js,json,md}'"
  },
  "devDependencies": {
    "husky": "^0.13.4",
    "lerna": "2.6.0",
    "lerna-changelog": "^0.6.0",
    "lint-staged": "^3.3.1",
    "prettier": "^1.11.1"
  },
  "lint-staged": {
    "*.js": ["prettier --write", "git add"]
  }
}
